
<div class="container">

	<div class="row">
		<div class="offset2 span8">
			<h3>All Patients</h3>
		    <table class="table">
				<tr>
					<th>Name</th>
					<th>Age</th>
					<th>Gender</th>
				</tr>
			  			
				<% @patients.each do |patient| %>
					<tr>
						 <td><%= patient.name %></td>
						 <td><%= patient.age %></td>
						 <td><%= patient.gender %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
	
	
</div>
